<h1 class="text-center mt-5 mb-5">New User Register</h1>

<div class="row justify-content-center">
  <div class="col-md-6">
    <form action="/auth/register" method="post">
      <input
        type="text"
        name="userName"
        class="form-control mb-2"
        placeholder="Type name"
        value="eden"
      />
      <input
        type="text"
        name="email"
        class="form-control mb-2"
        placeholder="Type email"
        value="eden@mail.com"
      />
      <input
        type="password"
        name="password"
        class="form-control mb-2"
        placeholder="Type password"
        value="123123"
      />
      <input
        type="password"
        name="repassword"
        class="form-control mb-2"
        placeholder="repeat password"
        value="123123"
      />
      <button class="btn btn-primary">Register</button>
    </form>

  </div>
</div>